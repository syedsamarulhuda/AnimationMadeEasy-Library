<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:gravity="center"
    tools:context="samar.com.easyanimation.MainActivity">


    <TextView
        android:id="@+id/tvText1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SLIDE"
        android:textSize="45sp"
        android:textColor="@color/colorAccent"
        android:gravity="center"
        android:layout_gravity="center"
        android:visibility="visible"
        />




    <TextView
        android:id="@+id/tvText2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SLIDED"
        android:textSize="45sp"
        android:textColor="@color/colorAccent"
        android:gravity="center"
        android:layout_gravity="center"
        android:visibility="gone"
        />


    <Button
        android:id="@+id/btnSlideToLeft"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Side To Left"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="25dp"
        android:layout_marginRight="45dp"
        />

    <Button
        android:id="@+id/btnSlideToRight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Side To Right"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="25dp"
        android:layout_marginRight="45dp"
        />

    <Button
        android:id="@+id/btnSlideToTop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Side To Top"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="25dp"
        android:layout_marginRight="45dp"
        />

    <Button
        android:id="@+id/btnSlideToBottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bounce"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="25dp"
        android:layout_marginRight="45dp"
        />

</LinearLayout>
